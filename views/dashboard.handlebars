<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete this post?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="x">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this post? This process is irreversible!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger" id="deleteBtn">Delete Post</button>
      </div>
    </div>
  </div>
</div>

<div class="row my-2">
  <div class="col">
    <header>
      <h1 class="text-capitalize text-center">{{user.username}}'s Dashboard</h1>
      <h2 class="text-center">View and edit your posts here</h2>
    </header>
  </div>
</div>

{{#if user.posts}}
  {{#each user.posts as |post|}}
    <div class="row text-center postRow mb-3">
      <div class="col-sm-6 box m-auto">
        <div class="row">
          <div class="col">
            <div class="postHeader">
              <h3 class="text-black postTitle">{{post.title}}</h3>
              <h4 class="text-black mb-1">Posted on
                {{post.date_created}}</h4>
            </div>
            <p
              class="text-black postText mb-1"
              style="text-align: left;"
            >{{post.text}}</p>
            <a class="btn btn-dark mb-1 viewBtn" href="/posts/{{post.id}}">View Post</a>
            <a class="btn btn-warning mb-1" id="editBtn" href="/editPost/{{post.id}}">Edit Post</a>
            <button class="btn btn-danger mb-1 deleteModalBtn" data-toggle="modal" data-target="#deleteModal" data-id={{post.id}}>Delete Post</button>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{/if}}

<script src="/js/deletePost.js"></script>