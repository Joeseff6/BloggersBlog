<div class="row my-3">
    <h2>Welcome back Techie!</h2>
    <h2>Please enter your information to log in:</h2>
</div>

<div class="row">
    <h3 id="wrongUser" style="color: red;"></h3>
</div>

<div class="row">
    <div class="col-4 my-3">
        <div class="input-group mb-3">
            <form id="loginForm">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="user1234@email.com" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="myPassword">
                </div>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
    </div>
</div>

<script src="./js/login.js"></script>