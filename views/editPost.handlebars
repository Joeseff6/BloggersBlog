<div class="row text-center my-2">
    <h2>Edit your post</h2>
</div>

<div class="row text-center" id="postHeader">
    <div class="col-9 box m-auto">
        <div class="row">
            <div class="mb-3">
                <form id="postForm">
                    <h3 class="text-center text-black postTitle">{{post.title}}</h3>
                    <textarea class="form-control" id="postText" rows="4" placeholder="Edit post here...">{{post.text}}</textarea>
                    <button type="submit" class="btn btn-dark mt-2" style="width: 150px;">Edit Post</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="./js/editPost.js"></script>