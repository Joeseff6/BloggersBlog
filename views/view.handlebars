<div class="row text-center my-3">
  <div class="col-sm-9 box m-auto">
    <div class="row">
      <div class="mb-1">
        <div class="postHeader">
          <h3 class="text-black text-center postTitle">Title: {{posts.title}}</h3>
          <p class="text-black mb-0">Posted by:
            {{posts.user.username}}
            on
            {{posts.date_created}}</p>
        </div>
        <p
          class="text-black postText mb-0"
          style="text-align: left;"
        >{{posts.text}}</p>
        <a class="btn btn-dark" id="commentBtn" href="#">Comment</a>
      </div>
    </div>
  </div>
</div>

{{#if posts.comments}}
  {{#each posts.comments as |comment|}}
    <div class="row mb-3">
      <div class="col-sm-9 box m-auto">
        <div class="row">
          <div class="mb-1">
            <div class="postHeader">
              <p class="text-black mb-0">Posted by:
                {{comment.user.username}}
                on
                {{comment.date_created}}</p>
            </div>
            <p
              class="text-black postText mb-0"
              style="text-align: left;"
            >{{comment.comment}}</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{/if}}

<div class="row position-relative text-center" id="commentForm">
  <div class="col-sm-9 box m-auto">
    <div class="row">
      <div class="mb-1">
        <form id="postForm">
          <textarea
            class="form-control my-1"
            id="commentText"
            rows="4"
            placeholder="Write comment here..."
          ></textarea>
          <button type="submit" class="btn btn-dark" style="width: 150px;">Post</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/newComment.js"></script>